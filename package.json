{
  "name": "react-ezform",
  "version": "1.0.0",
  "description": "A React component for creating dynamic Bootstrap forms by passing a simple declarative model to its props. Includes validation, a single onFormChange event, immutable data, straightforward hooks for customization, and responsive column layouts.",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jtrefry/react-ezform.git"
  },
  "keywords": [
    "react",
    "bootstrap",
    "forms",
    "dynamic",
    "easy",
    "ez",
    "ezforms",
    "simple",
    "validation",
    "immutable",
    "hooks",
    "customization"
  ],
  "scripts": {
    "clean": "rimraf build",
    "build:webpack": "NODE_PATH='source/modules' webpack -d --watch --config webpack.config.dev.js",
    "build": "npm run clean && npm run build:webpack",
    "start": "node devServer.js",
    "lint": "eslint src",
    "watch": "watch 'clear && npm run lint -s' src"
  },
  "author": "James Trefry",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jtrefry/react-ezform/issues"
  },
  "homepage": "https://github.com/jtrefry/react-ezform#readme",
  "dependencies": {
    "react": "^15.0.1",
    "react-bootstrap": "^0.28.5",
    "react-dom": "^15.0.1"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-react-jsx": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^2.7.0",
    "eslint-plugin-react": "^4.3.0",
    "express": "^4.13.4",
    "path": "^0.12.7",
    "rimraf": "^2.5.2",
    "watch": "^0.17.1",
    "webpack": "^1.12.15",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
